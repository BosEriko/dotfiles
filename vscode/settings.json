// "git.path": "D:\\dev\\wslgit.exe",
// "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
// ====================================================================== //
{
  "multiCommand.commands": [
    {
      "command": "multiCommand.makeRoom",
      "sequence": [
        "breadcrumbs.toggle",
        "workbench.action.toggleTabsVisibility",
        "editor.action.toggleMinimap",
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.toggleActivityBarVisibility",
        "workbench.action.toggleStatusbarVisibility"
      ]
    }
  ],
  "files.associations": {
    "*.hamlc": "haml"
  },
  "breadcrumbs.enabled": true,
  "editor.acceptSuggestionOnEnter": "false",
  "editor.cursorBlinking": "smooth",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": true,
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [ 50, 100, 150, 200 ],
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.wordWrap": "off",
  "explorer.openEditors.visible": 0,
  "extensions.autoUpdate": false,
  "files.autoSave": "off",
  "git.autofetch": true,
  "git.autofetchPeriod": 1000,
  "git.enabled": true,
  "search.location": "panel",
  "telemetry.enableTelemetry": false,
  "terminal.integrated.fontFamily": "DroidSansMono Nerd Font",
  "terminal.integrated.shell.osx": "zsh",
  "update.mode": "none",
  "update.showReleaseNotes": false,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "black",
  "vim.easymotionMarkerFontWeight": "normal",
  "vim.easymotionMarkerForegroundColorOneChar": "white",
  "vim.easymotionMarkerForegroundColorTwoChar": "red",
  "vim.easymotionMarkerHeight": 20,
  "vim.easymotionMarkerWidthPerChar": 10,
  "vim.easymotionMarkerYOffset": 0,
  "vim.leader": ",",
  "vim.useSystemClipboard": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Default High Contrast",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showTabs": true,
  "workbench.iconTheme": "simple-icons",
  "workbench.list.keyboardNavigation": "simple",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true
}
